<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_userinfo"
        android:layout_width="360dp"
        android:layout_height="140dp"
        android:visibility="gone"
        card_view:cardBackgroundColor="#27aae1"
        card_view:cardCornerRadius="28dp"
        card_view:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_userIcon"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image_p3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="22dp">

                <TextView
                    android:id="@+id/class_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size_larger" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cardinfo"
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:layout_marginLeft="22dp"
        android:visibility="gone"
        card_view:cardBackgroundColor="#27aae1"
        card_view:cardCornerRadius="28dp"
        card_view:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="22dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="校园卡号"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/cardnumber_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_larger" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>